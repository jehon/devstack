#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

. jh-lib

SWD="$(dirname "$( realpath "${BASH_SOURCE[0]}")")"

HOST="${1:?Need host as [1]}"
run() {
    header_begin "Run: $1"
    ssh "$HOST" "$1"
    header_end
}

run "apt update" 
run "dpkg --configure -a"
run "DEBIAN_FRONTEND=noninteractive apt install --fix-missing --yes"
run "DEBIAN_FRONTEND=noninteractive apt full-upgrade --yes"


ok "Done" 
