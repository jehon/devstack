#!/usr/bin/env bash

set -o errexit
set -o pipefail
shopt -s nullglob

SWD="$(dirname "$( realpath "${BASH_SOURCE[0]}")")"

HOST="${1:?Need host as [1]}"

cat | ssh "$HOST" <<-EOS
    . jh-lib

    export DEBIAN_FRONTEND=noninteractive
    apt update

    dpkg --configure -a || true
    apt install --fix-missing

    apt full-upgrade -y
EOS

ok "Done" 
